@{
    Layout = "_layout.cshtml";
}

@using RazorEngine.Templating

@foreach(var post in Model.AllPosts)
{
    <div class="post">
        <h1 class="post-title">@post.Title</h1>
        <small>@post.Date - <div class="comment-count"><a href="/blog/post/@post.Name#disqus_thread">Click here to see comments</a></div></small>
    </div>
}

<script type="text/javascript">
    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
    var disqus_shortname = '@Model.DisqusShortname'; // required: replace example with your forum shortname

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function () {
        var s = document.createElement('script');
        s.async = true;
        s.type = 'text/javascript';
        s.src = '//' + disqus_shortname + '.disqus.com/count.js';
        (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
    })();
</script>
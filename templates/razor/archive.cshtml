@{
    Layout = "_layout.cshtml";
}

@using RazorEngine.Templating

@foreach(var post in Model.AllPosts)
{
    <div class="post" data-tags='@String.Join(",", post.Tags)'>
        <h1 class="post-title">
            <a href='@Model.LocalUrl("/blog/post")/@post.Name'>@post.Title</a>
            <br/>
            <small>@post.Date</small>
        </h1>
        <div class="comment-count"><a href='@Model.LocalUrl("/blog/post")/@post.Name/#disqus_thread'>Click here to see comments</a></div>
    </div>
}

<script type="text/javascript">
    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
    var disqus_shortname = '@Model.DisqusShortname'; // required: replace example with your forum shortname

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function () {
        var s = document.createElement('script');
        s.async = true;
        s.type = 'text/javascript';
        s.src = '//' + disqus_shortname + '.disqus.com/count.js';
        (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
    })();
</script>